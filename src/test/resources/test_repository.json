{
    "name" : "Archive Sequencer Test Repository",
    "jndiName" : "",
    "workspaces" : {
        "predefined" : ["fedora"],
        "default" : "fedora",
        "allowCreation" : true
    },
    "sequencing" : {
        "removeDerivedContentWithOriginal" : true,
        "sequencers" : {
            "ArchiveSequencer" : {
                "classname" : "org.fcrepo.sequencer.archive.ArchiveSequencer",
                "pathExpressions":["fedora://(*.zip)/jcr:content[@jcr:data] => ." ],
                "endpoint" : "http://localhost:8000"
            }
        }
    },
    "storage" : {
        "cacheName" : "FedoraRepository",
        "cacheConfiguration" : "test_infinispan_configuration.xml",
        "binaryStorage" : {
            "type" : "cache",
            "dataCacheName" : "FedoraRepository",
            "metadataCacheName" : "FedoraRepository"
        }
    },
    "security" : {
        "anonymous" : {
            "roles" : ["readonly","readwrite","admin"],
            "useOnFailedLogin" : false
        },
        "providers" : [
            { "classname" : "servlet" }
        ]
    },
    "node-types" : ["fedora-node-types.cnd"]
}
